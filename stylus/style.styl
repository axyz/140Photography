box-shadow(args...)
   -webkit-box-shadow args
   -moz-box-shadow args
   box-shadow args

body
	background-color whiteSmoke

.row
	width 2560px

.top-bar
	.name
		h1
			font-family "Oswald"
			a
				color #e36b23 !important

.nav-bar
	background #2a333c !important
	li
		:hover
			background #0b0d0f !important

#deck
	box-shadow 3px 5px 10px 1px #bbb
	padding-bottom 20px
	background-color #fff

#links
	margin-top -44px
	text-align right
	img
		border solid 2px #2a333c
		padding 5px

.social-icon
	font-size 2em

#suggest
	padding 0px 20px 1px

@media (min-width: 941px)
	.top-bar ul > li a:not(.button)
		padding 0 16px !important

@media (max-width: 940px)
	.top-bar ul > li a:not(.button)
		height 46px !important
		line-height 46px !important